{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ES2021",
      "DOM"
    ],
    "strict": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": [
        "packages/core/src/*"
      ],
      "@web/*": [
        "apps/web/src/*"
      ],
      "@extension/*": [
        "apps/extension/src/*"
      ],
      "@core": [
        "packages/core/src/index.ts"
      ]
    }
  }
}
